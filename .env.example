# GLQ Chain Analytics Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_ORG=glq-analytics
INFLUX_BUCKET=blockchain_data
INFLUX_TOKEN=your_influxdb_api_token_here

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=614

# Processing Configuration
MAX_WORKERS=8
BATCH_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Custom configuration overrides
# CUSTOM_CONFIG_PATH=/path/to/custom/config.yaml

# Optional: Performance tuning
# CONNECTION_TIMEOUT=30
# MAX_CONNECTIONS=20

# Optional: Monitoring configuration
# MONITORING_PORT=8001
# WEBSOCKET_BROADCAST_INTERVAL=2